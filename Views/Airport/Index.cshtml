@model IList<AMRS.Models.AirportsModel>

@{
    ViewData["Title"] = "View Airports";
}

@{  
  if(ViewBag.Message != null)  
  {  
     <div>  
         @ViewBag.Message  
     </div>  
  }  
}  

<style>
.error {
  background-color: tomato;
  color: white;
  border: 2px solid black;
  margin: 7px;
  padding: 7px;
}
</style>

   <div>
        <h1>Airports</h1>
            <div>
                <p>@Html.ActionLink("Add New", "Create")</p>

                    @using (Html.BeginForm("Index", "Airport", FormMethod.Get))
                    {
                                                                  
                        <p>
                            <label><b>Airport Name: </b><input type="text" name="strSearch" /></label>
                            <input type="submit" value="Search" asp-action="Index"  asp-controller="Airport" class="btn-primary"/>                    
                        </p>
                    }

            @if (Model.Count <= 0)
                {
                    <span><div class="error">Airport not found ....try again..</div></span>
                }
            else
                {
                    <table style="width:100%; border: solid 2px #000" class="table table-responsive table-bordered table-striped customers">
                            <tr align="center" style="font-weight: bold;">
                                <td>ID</td>
                                <td>Name</td>
                                <td>Country</td>
                                <td>City</td>
                                <td>Zipcode</td>
                                <td>Action</td>
                            </tr>
                        @foreach (var item in Model)
                        {
                            <tr align="center">
                                <td>@Html.DisplayFor(modelItem => item.portId)</td>
                                <td>@Html.DisplayFor(modelItem => item.portName)</td>
                                <td>@Html.DisplayFor(modelItem => item.portCountry)</td>
                                <td>@Html.DisplayFor(modelItem => item.portCity)</td>
                                <td>@Html.DisplayFor(modelItem => item.portZip)</td>
                                <td>@Html.ActionLink("Update", "Update",new {portid = item.portId}) / @Html.ActionLink("Delete", "Delete",new {portid = item.portId}) </td>
                            </tr>
                        }
                    </table>
                }
            </div>                       
    </div>